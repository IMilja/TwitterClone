{% extends 'base.html.twig' %}

{% block title %}Homepage{% endblock %}

{% block body %}
  {% if posts %}
    {% for post in posts %}
      <div class="card m-2">
        <div class="card-header">
          {{ post.title }}
        </div>
        <div class="card-body">
          <blockquote class="blockquote mb-0">
            <p>{{ post.body }}</p>
            <footer class="blockquote-footer">{{ post.postDate }}</footer>
          </blockquote>
        </div>
      </div>
    {% endfor %}
  {% else %}
    <p>There are no posts to show!</p>
  {% endif %}
{% endblock %}